<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/channel_block_style"
    android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/channelIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/channel_logo_background"/>
        <View
            android:id="@+id/divider1"
            android:layout_width="16dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@id/channelIcon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toEndOf="@id/divider1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/channelName"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="roboto"
                android:gravity="start"
                android:singleLine="true"
                android:textColor="@color/text_active"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/channelDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textSize="15sp"
                android:fontFamily="roboto"
                android:textColor="@color/text_active"
                android:maxLines="2"/>
        </LinearLayout>
        <View
            android:id="@+id/divider2"
            android:layout_width="16dp"
            android:layout_height="60dp"
            android:layout_toStartOf="@id/icon_fav"/>
        <ImageView
            android:id="@+id/icon_fav"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/icon_disable"/>

    </RelativeLayout>
