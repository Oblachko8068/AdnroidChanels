<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:background="@drawable/player_background_top"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/backToMain1"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/img_back" />

        <View
            android:layout_width="10dp"
            android:layout_height="44dp" />

        <ImageView
            android:id="@+id/activeChannelIcon1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/active_channel_icon" />

        <View
            android:layout_width="22dp"
            android:layout_height="44dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activeChannelDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_active_channel_description"
                android:textSize="19sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/activeChannelName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_active_channel_name"
                android:textSize="16sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/exo_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/player_background_bottom"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:textColor="@color/text_active_channel_description"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"/>

        <ImageButton
            android:id="@+id/exo_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/exo_progress"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:src="@drawable/icon_setting" />

        <androidx.media3.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentBottom="true"
            app:played_color="@color/played_video"
            />

    </RelativeLayout>
</RelativeLayout>