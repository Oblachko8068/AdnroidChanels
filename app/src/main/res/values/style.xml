<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_corner_radius</item>
        <item name="colorButtonNormal">?attr/mainButton</item>
        <item name="colorControlHighlight">?attr/mainButton</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/textActive</item>
        <item name="android:editTextColor">?attr/textActive</item>
    </style>

    <style name="CustomTabTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonsStyle" parent="Widget.Material3.Button">
        <item name="android:background">?attr/blocksBackground</item>
        <item name="backgroundColor">?attr/blocksBackground</item>
        <item name="backgroundTint">?attr/blocksBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/textActive</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>